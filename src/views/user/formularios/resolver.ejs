<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>Formularios</title>
  <link rel="icon" href="/img/favicon.ico" type="image/x-icon" />
  <!-- styles -->
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/css/page.css">
  <link rel="stylesheet" href="/css/boton.css">
  <link rel="stylesheet" href="/css/navbar.css">
  <link rel="stylesheet" href="/css/nav.css">
  <link rel="stylesheet" href="/css/form.css">
  <link rel="stylesheet" href="/css/input.css">
  <link rel="stylesheet" href="/css/list.css">
  <link rel="stylesheet" href="/css/avatar.css">
  <link rel="stylesheet" href="/css/drops.css">
  <link rel="stylesheet" href="/css/icon.css">
  <link rel="stylesheet" href="/css/card.css">
  <link rel="stylesheet" href="/css/validate.css">
</head>

<body>
  <div class="page">
    <%- include('../../partials/header') %>
    <%- include('../../partials/navbar', {opcion: 'FORMULARIO'}) %>
    <div class="page-wrapper">
      <div class="page-header d-print-none">
        <div class="container-xl">
          <div class="row g-2 align-items-center">
            <div class="col">
              <div class="page-pretitle">
                Resolver
              </div>
              <h2 class="page-title">
                Formulario
              </h2>
            </div>
          </div>
        </div>
      </div>
      <div class="page-body">
        <div class="container-xl">
          <div class="row">
            <div class="col-12">
              <div class="card">
                <form action="" id="rslver" method="POST" onsubmit="return validate();">
                  <input type="hidden" id="idform" name="idform" value="<%- datos.formulario.IDFORM %>">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-4">
                        <div class="mb-1">
                          <label class="form-label text-start">MÃ³vil</label>
                          <input type="text" name="movsms" id="movsms" class="form-control" value="<%- datos.formulario.MOVCON %>" readonly/>
                        </div>
                      </div>
                      <div class="col-8">
                        <div class="mb-1">
                          <div class="input-control">
                            <label class="form-label required">Texto</label>
                            <textarea type="text" name="texsms" id="texsms" class="form-control textarea" rows="3"></textarea>
                            <div class="invalid-feedback"></div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-2 text-start">
                        <label class="form-check form-check-inline">
                          <input type="checkbox" class="form-check-input" name="chkenv" id="chkenv" value="false" />
                          <span class="form-check-label">Enviar</span>
                        </label>
                      </div>
                    </div>
                  </div>
                  <div class="card-footer text-end">
                    <div class="d-flex">
                      <a href="" id="vol" class="btn btn-white">Cancelar</a>
                      <button type="submit" class="btn btn-primary ms-auto">Resolver formulario</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <%- include('../../partials/footer') %>
    </div>
  </div>
  <script src="/js/util.js"></script>
  <script src="/js/user/formularios/resolver.js"></script>
</body>
</html>