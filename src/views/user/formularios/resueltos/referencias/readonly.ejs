<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>Formularios</title>
  <link rel="icon" href="/img/favicon.ico" type="image/x-icon">
  <!-- styles -->
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/css/page.css">
  <link rel="stylesheet" href="/css/boton.css">
  <link rel="stylesheet" href="/css/navbar.css">
  <link rel="stylesheet" href="/css/nav.css">
  <link rel="stylesheet" href="/css/form.css">
  <link rel="stylesheet" href="/css/input.css">
  <link rel="stylesheet" href="/css/list.css">
  <link rel="stylesheet" href="/css/avatar.css">
  <link rel="stylesheet" href="/css/drops.css">
  <link rel="stylesheet" href="/css/icon.css">
  <link rel="stylesheet" href="/css/card.css">
  <link rel="stylesheet" href="/css/validate.css">
</head>

<body>
  <div class="page">
    <%- include('../../../partials/header') %>
    <%- include('../../../partials/navbar', {opcion: 'FORMULARIO' }) %>
    <div class="page-wrapper">
      <div class="page-header d-print-none">
        <div class="container-xl">
          <div class="row g-2 align-items-center">
            <div class="col">
              <div class="page-pretitle">
                Lectura
              </div>
              <h2 class="page-title">
                Referencias
              </h2>
            </div>
          </div>
        </div>
      </div>
      <div class="page-body">
        <div class="container-xl">
          <div class="row">
            <div class="col-12">
              <div class="card">
                <div class="card-body">
                  <div class="list-group list-group-flush overflow-auto" style="max-height: 50vh">
                    <% datos.referencias.map(itm=> { %>
                      <div class="list-group-item py-1">
                        <div class="row">
                          <div class="col-auto">
                            <div class="align-items-center">
                              <span class="avatar avatar-rounded bg-green-lt">
                                <h6 class="m-0">OK</h6>
                              </span>
                            </div>
                          </div>
                          <div class="col text-truncate">
                            <span style="font-size: .7rem;">
                              NIF: <%- itm.NIFREF %>
                            </span>
                            <div class="text-muted text-truncate">
                              <span style="font-size: .7rem;">
                                Fecha: <%- itm.FECREF.slice(0,10).split("-").reverse().join("/") %> - Referencia: <%- itm.DESREF %> - Tipo: <%- itm.DESTIP %>
                              </span>                            
                            </div>
                          </div>
                        </div>
                      </div>
                    <% }) %>
                  </div>
                </div>
                <div class="card-footer">                  
                  <div class="ms-auto d-flex py-1">
                    <a href="/user/formularios/resueltos" class="btn btn-white">Volver</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('../../../partials/footer') %>
  </div>
</body>

</html>