            }
          }
        }],
        defaultLocale: "es",
        type: 'bar',
        height: '420',
        stacked: true,
        toolbar: {
          show: false,
        },
      },
      dataLabels: {
        enabled: false
      },
      series: [
        {
          name: 'Resuelto',
          data: <%- datos.serieR %>
        },
      ],
      xaxis: {
        type: 'datetime',
      }
    }
    const chart = new ApexCharts(document.querySelector("#chart-actuac"), options);
    const chartPendientes = new EasyPieChart(element, {
      size: '75',
      easing: 'easeOutElastic',
      delay: 3000,
      barColor: '#4263eb',
      trackColor: '#f2f3f4',
      scaleColor: false,
